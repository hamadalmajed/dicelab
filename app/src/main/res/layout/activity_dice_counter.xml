<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    tools:context=".CounterClass">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#471E91"
        android:text="My Dice Game"
        android:gravity="center"
        android:textSize="30sp"
        android:textStyle="bold"
        android:fontFamily="casual"
        android:textColor="#FFFFFF"
        />

    <GridLayout
        android:layout_marginTop="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:layout_gravity="center"
        >
        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/rectangle"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 :   "
                android:textSize="30sp"
                tools:layout_editor_absoluteX="121dp"
                tools:layout_editor_absoluteY="197dp" />


            <TextView
                android:id="@+id/valone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="30sp"
                tools:layout_editor_absoluteX="238dp"
                tools:layout_editor_absoluteY="197dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="20sp"
            android:background="@drawable/rectangle"
            android:layout_marginLeft="10sp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2 :  "
                android:textSize="30sp"
                tools:layout_editor_absoluteX="121dp"
                tools:layout_editor_absoluteY="256dp" />
            <TextView
                android:id="@+id/valtwo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="30sp"
                tools:layout_editor_absoluteX="238dp"
                tools:layout_editor_absoluteY="256dp" />

        </LinearLayout>



        <LinearLayout

            android:layout_marginTop="10sp"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/rectangle"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3 :  "
                android:textSize="30sp"
                tools:layout_editor_absoluteX="121dp"
                tools:layout_editor_absoluteY="256dp" />
            <TextView
                android:id="@+id/valthree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="30sp"
                tools:layout_editor_absoluteX="238dp"
                tools:layout_editor_absoluteY="256dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10sp"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="20sp"
            android:background="@drawable/rectangle"
            android:layout_marginLeft="10sp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4 :   "
                android:textSize="30sp"
                tools:layout_editor_absoluteX="121dp"
                tools:layout_editor_absoluteY="197dp" />


            <TextView
                android:id="@+id/valfour"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="30sp"
                tools:layout_editor_absoluteX="238dp"
                tools:layout_editor_absoluteY="197dp" />
        </LinearLayout>




        <LinearLayout

            android:layout_marginTop="10sp"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/rectangle"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5 :  "
                android:textSize="30sp"
                tools:layout_editor_absoluteX="121dp"
                tools:layout_editor_absoluteY="256dp" />
            <TextView
                android:id="@+id/valfive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="30sp"
                tools:layout_editor_absoluteX="238dp"
                tools:layout_editor_absoluteY="256dp" />

        </LinearLayout>

        <LinearLayout

            android:layout_marginTop="10sp"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="20sp"
            android:background="@drawable/rectangle"
            android:layout_marginLeft="10sp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6 :   "
                android:textSize="30sp"
                tools:layout_editor_absoluteX="121dp"
                tools:layout_editor_absoluteY="197dp" />


            <TextView
                android:id="@+id/valsix"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="30sp"
                tools:layout_editor_absoluteX="238dp"
                tools:layout_editor_absoluteY="197dp" />
        </LinearLayout>


    </GridLayout>
    <ImageView
        android:id="@+id/image_view_dice"
        android:layout_marginTop="30sp"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:onClick="randdice"
        android:src="@drawable/faceone"
        />


    <Button
        android:layout_marginTop="50dp"
        android:layout_width="200dp"
        android:layout_gravity="center"
        android:background="@drawable/rounded"
        android:layout_height="wrap_content"
        android:text="RESET"
        android:onClick="rest"
        tools:layout_editor_absoluteX="158dp"
        tools:layout_editor_absoluteY="576dp" />


    </LinearLayout>
</ScrollView>